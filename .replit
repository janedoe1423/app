modules = ["flutter", "nodejs-20", "bun", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "FlutterApp"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FlutterApp"

[[workflows.workflow]]
name = "FlutterApp"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter run -d web-server --web-hostname=0.0.0.0 --web-port=5000"]

[[ports]]
localPort = 5000
externalPort = 80
